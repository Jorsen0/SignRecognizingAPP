<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="55dp"
    android:paddingStart="55dp"
    android:paddingEnd="55dp"
    android:paddingBottom="0dp"
    android:gravity="center"
    android:background="@mipmap/split_board_left"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="2"
            android:gravity="center">
            <ImageView
                android:id="@+id/button_start_conversation"
                android:layout_width="140dp"
                android:contentDescription="@string/app_name"
                android:layout_height="200dp"
                android:background="@mipmap/start_conversation_button"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:gravity="start"
                   android:layout_marginBottom="13dp">
                   <ImageView
                       android:id="@+id/setting_button"
                       android:layout_width="80dp"
                       android:layout_height="28dp"
                       android:background="@drawable/button_setting" />
               </LinearLayout>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="4dp"
                    android:background="@drawable/horizontal_line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginTop="13dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="28dp"
                        android:background="@drawable/button_about" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>


